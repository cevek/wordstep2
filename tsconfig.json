{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "built",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "listEmittedFiles": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}